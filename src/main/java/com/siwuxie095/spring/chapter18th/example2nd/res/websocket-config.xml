<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:websocket="http://www.springframework.org/schema/websocket"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.0.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!--
    This configuration file is not used, but remains here as an example
    of how to configure low-level websocket in Spring using XML.
    See WebSocketConfig.java for the Java configuration of websocket
    that is in use.
    -->

    <websocket:handlers>
        <websocket:mapping handler="marcoHandler" path="/marco"/>
        <websocket:sockjs/>
    </websocket:handlers>

    <bean id="marcoHandler"
          class="com.siwuxie095.spring.chapter18th.example2nd.marcopolo.MarcoHandler"/>

</beans>
